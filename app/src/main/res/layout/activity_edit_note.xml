<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/crossword"
    tools:context="com.example.marielazviskova.simplenotepadapp.EditNoteActivity">

    <include
        android:id="@+id/toolbar_edit"
        layout="@layout/toolbar"></include>

    <EditText
        android:id="@+id/titleEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_edit"
        android:gravity="center_horizontal"
        android:hint="Note title"
        android:paddingBottom="@dimen/padding_edit_et"
        android:paddingTop="@dimen/padding_edit_et">

    </EditText>

    <EditText
        android:id="@+id/contentEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleEdit"
        android:gravity="center_horizontal"
        android:hint="@string/text_field"
        android:paddingBottom="80dp" />

    <Button
        android:id="@+id/edit"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@id/contentEdit"
        android:layout_marginLeft="120dp"
        android:background="@drawable/rounded_shape"
        android:text="@string/save" />

</RelativeLayout>
